{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "format": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "format:check": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}
